<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body class="container">
    <%- include('../partials/nav.ejs') %>
    <div class="blogs">
        <h2>All Blogs</h2>
        <% if(blogs.length > 0){ %>
            <% blogs.forEach((blog, index) => { %>
                <%- include('./partials/_post.ejs', { index, blog }) %>
            <% }) %>
        <% } else { %>
            <p>No Blog Posts</p>
        <% } %>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>
